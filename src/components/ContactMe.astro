<section class="contact-section" id="contact">
  <h1>Contacto</h1>
  <form class="contact-form" action="https://formspree.io/f/xyzgpjby" method="POST" enctype="multipart/form-data">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" required />

    <label for="phone">Telefono:</label>
    <input type="tel" id="phone" name="phone" required />

    <label for="message">Mensaje:</label>
    <textarea id="message" name="message" rows="5" required></textarea>
    <input type="hidden" name="_next" value="/thanks">
    <button type="submit">Enviar</button>
  </form>
</section>

<style>
  section {
    background-color: rgb(77, 115, 255);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 20px;
    height: 80vh;
  }

  section h1 {
    text-align: center;
    padding: 10px;
    font-family: Arsenal SC;
    margin: 20px;
    color: white;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 500px;
    padding: 40px;
    background-color: rgb(255, 255, 75);
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

    label {
      font-weight: 600;
    }
  }

  .contact-form input,
  .contact-form textarea {
    margin-bottom: 15px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .contact-form button {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    background-color: #1E90FF;
    color: white;
    font-size: 16px;
    cursor: pointer;
  }

  .contact-form button:hover {
    transform: scale(1.1);
  }
</style>
