<myJob>
    <div class="myJob-container">
        <h1>Galeria</h1>
        <div class="card-container clickable-image">
                  <img src="/alberca15.jpg" alt="">
                  <img src="/alberca10.jpg" alt="">
                  <img src="/alberca2.jpg" alt="">
                  <img src="/alberca1.jpg" alt="">
                  <img src="/alberca6.jpg" alt="">
                  <img src="/alberca4.jpg" alt="">
            <div id="imageModal" class="modal">
                <span class="close">&times;</span>
                <img class="modal-content" id="modalImage">
                <div id="caption"></div>
            </div>
        </div>
    </div>
</myJob>

<style>
@import url('https://fonts.googleapis.com/css2?family=Arsenal+SC:ital,wght@0,400;0,700;1,400;1,700&display=swap');

.myJob-container {
    width: 100vw;
    margin: 0 auto;
    padding: 20px;
    border-bottom: 40px transparent solid;
}

h1 {
    text-align: center;
    padding: 20px;
    color: rgb(77, 115, 255);
    font-family: "Arsenal SC";
}

.card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-around;
}

.card-container img {
    width: 25%;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.card-container img:hover {
    transform: scale(1.1);
    filter: drop-shadow(0px 0px 10px rgb(75, 75, 255));
}

.modal {
    display: none;  /* Oculto por defecto */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9); /* Fondo oscuro */
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal-content {
    max-width: 90%;
    max-height: 80%;
    width: auto;
    height: auto;
    margin: auto;
    display: block;
    border-radius: 8px;
    object-fit: contain;  /* Mantiene la relación de aspecto */
}

.close {
    position: absolute;
    top: 20px;
    right: 20px;
    color: #fff;
    font-size: 35px;
    font-weight: bold;
    cursor: pointer;
    transition: color 0.3s;
}

.close:hover,
.close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
}

#caption {
    margin-top: 20px;
    text-align: center;
    color: #ccc;
    font-size: 18px;
}

@media (max-width: 500px) {
    .card-container {
        flex-direction: column;
        align-items: center;
    }

    .card-container img {
        width: 80%;  /* Ajusta el tamaño de las imágenes */
        margin-bottom: 20px;
    }

    .close {
        right: 10px;
        font-size: 30px;
    }

    .modal-content {
        max-width: 100%;
        max-height: 100%;
    }
}

</style>

<script>
    // Asegúrate de que el script se ejecute solo en el cliente.
    if (typeof window !== 'undefined') {
        const modal = document.getElementById("imageModal");
    const images = document.querySelectorAll<HTMLImageElement>(".clickable-image img");
    const modalImg = document.getElementById("modalImage") as HTMLImageElement;
    const captionText = document.getElementById("caption");
    const closeBtn = document.querySelector(".close") as HTMLElement;
  
    images.forEach((img) => {
      img.addEventListener('click', () => {
        modal.style.display = "flex";
        modal.style.alignItems = "center"
        modalImg.style.width = "50vw"
        modalImg.src = img.src;
        captionText.innerHTML = img.alt;
      });
    });

  
      closeBtn.addEventListener('click', () => {
        modal.style.display = "none";
      });
  
      modal.addEventListener('click', (event) => {
        if (event.target === modal) {
          modal.style.display = "none";
        }
      });
    }
  </script>